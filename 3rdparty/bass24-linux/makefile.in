FLAGS = -Os -I.. -L.. -L../x64 -lbass -lm -Wl,--no-warn-search-mismatch,-rpath,'$$ORIGIN/..:$$ORIGIN/../x64'
FLAGS += $(foreach pkg,$(PACKAGES),`pkg-config $(pkg) --cflags --libs`)

.PHONY: all clean

%: %.c %.ui
	$(CC) $*.c $(FLAGS) -export-dynamic -o $@

%: %.c
	$(CC) $*.c $(FLAGS) -o $@
